<h1>Session#new</h1>


<h2>Log in</h2>

<%= form_tag login_path do %>
    <fieldset>
        <%= label_tag :email %>
        <%= email_field_tag :email %>
    </fieldset>

    <fieldset>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </fieldset>

    <%= submit_tag "Log in"  %>
<% end %>

<% if flash[:error].present? %>
    <h2><%= flash[:error] %></h2>
<% end %>